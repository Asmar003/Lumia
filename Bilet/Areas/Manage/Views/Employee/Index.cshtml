
@{
    ViewData["Title"] = "Index";
}

@model ICollection<Employee>

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Full Name</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee item in Model)
                        {
                        <tr>
                            <td>
                                <img src="~/assets/img/@item.ImageUrl">
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td><a asp-action="Update" asp-area="Manage" asp-controller="Employee" asp-route-id="@item.Id">Update</a></td>
                            <td><a asp-action="Delete" asp-area="Manage" asp-controller="Employee" asp-route-id="@item.Id">Delete</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
